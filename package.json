{
  "name": "modern-blog-platform",
  "version": "2.0.0",
  "description": "Modern, secure, and responsive blog platform built with MERN stack",
  "private": true,
  "workspaces": ["client", "server"],
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "server:start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules",
    "deploy:server": "cd server && npm run build",
    "deploy:client": "cd client && npm run build"
  },
  "keywords": [
    "blog",
    "mern",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "tailwindcss",
    "modern",
    "responsive",
    "secure"
  ],
  "author": "Saith Mota",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
